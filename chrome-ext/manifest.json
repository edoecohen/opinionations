{
  "manifest_version": 2,

  "name": "Opinionations",
  "description": "Record an opinionated news article to share",
  "version": "0.1",

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Record an article"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "*://*.opinionations.co/"
  ],

  "web_accessible_resources": [
    "lib/**/*"
  ]
}
